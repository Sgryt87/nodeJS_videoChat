<h1 class="text-center">Contact Us</h1>
<form method="post" class="col-md-6 col-md-offset-3">
    {{#each errorMessages }}
        <div class="alert alert-danger">{{this.msg}}</div>
    {{/each}}
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" class="form-control" placeholder="Your Name" value="{{name}}">
    </div>
    <div class="form-group">
        <label>Email address</label>
        <input type="email" name="email" class="form-control" placeholder="Your Email" value="{{email}}">
    </div>
    <div class="form-group">
        <label>Message</label>
        <textarea name="message" class="form-control" rows="3">{{message}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>